<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/list_item_hub"
        style="@style/HubTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/hublist_item_height"
        android:drawablePadding="@dimen/hublist_item_icon_margin_end"
        android:drawableStart="@drawable/ic_item_tv"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/hublist_item_text_padding"
        android:paddingStart="@dimen/hublist_item_text_padding" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hublist_separator_height"
        android:background="@color/list_item_hub_separator_color" />

</LinearLayout>